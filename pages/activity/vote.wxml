<!--pages/activity/vote.wxml-->
<view class="container b-light-warning" style='background:url({{themeList[themeId].pic}})no-repeat;background-size:100% auto;'>
  <view class="page-body" style='z-index:99;margin-top:40rpx;padding-bottom:80rpx;'>
    <i-row i-class="c-title-28">
      <i-col span="20" offset="2">
        <view class='center c-title-38 ellipsis' style='color:#fff;margin-bottom:30rpx'>{{formInfo.extraData.name}}</view>
      </i-col>
      <i-col span="20" offset="2">
        <view class='center' style='color:#fff;margin-bottom:15rpx'>截止时间:{{endDate}}</view>
      </i-col>
      <!-- <i-col span="7" offset="4">
        <view class='center' style='color:#fff;margin-bottom:15rpx'>开始时间</view>
      </i-col>
      <i-col span="7" offset="2">
        <view class='center' style='color:#fff;margin-bottom:15rpx'>截止时间</view>
      </i-col>
      <i-col span="7" offset="4">
        <view class='center' style='color:#fff;border:6rpx solid #fff;border-radius:40rpx;padding:5rpx'>{{beginDate}}</view>
      </i-col>
      <i-col span="2">
        <view class='center' style='color:#fff;padding:5rpx'>一</view>
      </i-col>
      <i-col span="7">
        <view class='center' style='color:#fff;border:6rpx solid #fff;border-radius:40rpx;padding:5rpx'>{{endDate}}</view>
      </i-col> -->
    </i-row>
    <!-- <image mode="widthFix" src="/resources/image/ic_activity_apply_left.png" style='width:120rpx;height:120rpx;margin-left:6rpx!important;margin-top: -26rpx!important;position:absolute;'></image> -->
    <i-row background="#fff;border-radius:40rpx 40rpx 0 0;z-index:99;margin-top:30rpx;padding-top:30rpx;margin-bottom:50rpx">
        <i-col span="20" offset="2" i-class="c-title-32">投票说明</i-col>
        <i-col span="20" offset="2" i-class="c-content-24"><view style='padding:30rpx 0'>{{formInfo.extraData.content}}</view></i-col>
        <i-col span="20" offset="2" wx:for="{{formData}}" wx:key="{{item.id}}" i-class='item-bg centerv' data-inx="{{index}}" bind:tap="selectItem">
          <i-col span="{{item.pic.length > 0 ?'4':'0'}}"><image mode="aspectFill" src="{{item.pic.length > 0 ? item.pic : '/resources/image/ic_banner_loading.png'}}" style='display:block;width:100rpx;height:100rpx;' wx:if="{{item.pic.length > 0}}"></image></i-col>
          <i-col span="{{item.pic.length > 0 ?'11':'16'}}" offset="{{item.pic.length > 0 ?'1':'0'}}" i-class="c-content-28">{{item.name}}</i-col>
          <i-col span="6" offset="1" i-class="c-content-info-28">
            <view class="tr">
              {{formInfo.extraData.showType!="2" && formInfo.extraData.optionId || vote <= 0 ? (item.num+'票'): ''}}
              <view class='non-check' style="margin-left:20rpx;display:inline-block;{{item.checked ? ('border-color:'+themeList[themeId].color): ''}}">
              </view>
            </view>
          </i-col>
        </i-col>
    </i-row>
    <form bindsubmit="submit" report-submit="true">
      <button class="button i-class i-btn {{ 'i-btn-' + themeList[themeId].buttonTheme }} i-btn-circle {{formInfo.extraData.optionId || vote <= 0? 'disable': ''}}" hover-class="i-btn-hover" plain="true" formType="submit" disabled='{{formInfo.extraData.optionId || vote <= 0}}'>{{formInfo.extraData.optionId ? '已投票':'投票'}}{{vote <= 0 ? '(已截止)':''}}</button>
    </form>
  </view>
  <i-message id="message" />
</view>