/* pages/activity/top.wxss */
.page-body {
  z-index: 999;
  position: fixed;
  top:0;
  left:0;
  width:100%;
}
.page-content {
  border-radius: 40rpx 40rpx 0rpx 0rpx;
  margin-top: -50rpx;
  position: relative;
  z-index: 100;
  padding: 0;
}
.top-title {
  color: #2c3141;
  font-size: 26rpx;
  position: absolute;
  right: 0;
  text-align: center;
  top: 20rpx;
  background: #FFDE00;
  padding: 25rpx 10rpx;
  border-radius: 35rpx 0rpx 0rpx 35rpx;
  -webkit-writing-mode: vertical-lr;
  riting-mode: vertical-lr;
  
}
.tabs-title {
  border-radius: 40rpx 40rpx 0rpx 0rpx;
  padding: 20rpx 0rpx;
  position: relative;
  background: #fff;
  z-index: 100;
}
.jg{
  margin-top: 5rpx;
  border-radius: 2rpx;
  min-width: 4rpx;
  background: #ddd;
  display: inline-block;
  min-height: 36rpx;
}
.activity{
  padding: 20rpx 20rpx 8rpx 10rpx;
  margin-top: 30rpx;
  border-radius:10rpx;
  box-shadow: 0px 5px 8px #e6e6e9;
  margin-bottom: 30rpx;
}
.height{
 height:260rpx;
 padding-top:80rpx;
}
.button-new{
  background:#ff0579;
  width:140rpx;
  margin-top:15rpx;
  margin-left:40rpx;
  border-radius:40rpx;
  font-size:24rpx;
  padding:10rpx 15rpx;
  text-align:center;
  color:#fff;
}
.grad {
  background: -webkit-linear-gradient(top,#f7598b,#fca19b); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(top,#fca19b, #f7598b); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(top,#fca19b, #f7598b); /* Firefox 3.6 - 15 */
  background: linear-gradient(top,#fca19b, #f7598b); /* 标准的语法 */
}