.mini-audio-player {
    border-radius:20rpx;
    width: 100%;
    height: 84px;
    border: #dedeee solid 1px;
    background: #f8f8f9;
    box-sizing: border-box;
    padding: 16px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    margin: 16px 0;
    overflow:visible;
}

.mini-audio-player .btn-play,.mini-audio-player .btn-pause {
    border: none;
    flex-shrink: 0;
}

.mini-audio-player .btn-play {
    width: 95rpx;
    height: 95rpx;
    background-image: url(data:image/png;base64,);
    background-repeat: no-repeat;
    background-position: 0 0;
    background-size: contain;
    text-decoration: none;
}

.mini-audio-player .btn-pause {
    width: 95rpx;
    height: 95rpx;
    background-image: url(data:image/png;base64,);
    background-repeat: no-repeat;
    background-position: 0 0;
    background-size: contain;
    text-decoration: none;
}

.mini-audio-player .audio-info {
    display: flex;
    flex-grow: 1;
    flex-direction: column;
    margin-left: 11px;
    min-width: 0;
}

.mini-audio-player .audio-info .h3 {
    color: #2c3141;
    font-size: 30rpx;
    font-weight:700;
    margin: 0rpx 0rpx 6rpx 0rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.mini-audio-player .audio-info .p {
    margin: 0;
    margin-top: 6rpx;
    font-size: 24rpx;
    line-height: 32rpx;
    color: #bbbec4;
}